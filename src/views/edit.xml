<!-- TOP APP BAR -->
		
<header class="mdc-top-app-bar mdc-top-app-bar--fixed mdc-elevation--z4">
 <div class="mdc-top-app-bar__row">
		<section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start">
			<button class="arrow-back material-icons mdc-top-app-bar__navigation-icon mdc-icon-button" 
					aria-label="Open navigation menu">arrow_back</button>
		</section>
		<section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-end" role="toolbar">
			<button class="material-icons mdc-top-app-bar__action-item mdc-icon-button star" aria-label="Star Note">star_outline</button>
			<button class="material-icons mdc-top-app-bar__action-item mdc-icon-button save" aria-label="Save Note">save</button>
			<button class="material-icons mdc-top-app-bar__action-item mdc-icon-button mdc-menu-surface--anchor"aria-label="Options">
				more_vert
	
				<div class="mdc-menu mdc-menu-surface mdc-elevation--z8">
					<ul class="mdc-list" role="menu" aria-hidden="true" aria-orientation="vertical" tabindex="-1">
						<li class="mdc-list-item copy-note" role="menuitem">
							<span class="mdc-list-item__ripple"></span>
							<span class="mdc-list-item__text">Copy</span>
						</li>
						<li class="mdc-list-item delete-note" role="menuitem">
							<span class="mdc-list-item__ripple"></span>
							<span class="mdc-list-item__text">Delete</span>
						</li>
					</ul>
				</div>
			</button>
		</section>
	</div>
</header>

<!-- Note title -->
		
<label class="mdc-text-field mdc-text-field--outlined note-title">
	<span class="mdc-notched-outline">
		<span class="mdc-notched-outline__leading"></span>
		<span class="mdc-notched-outline__notch">
			<span class="mdc-floating-label" id="my-label-id">Title</span>
		</span>
		<span class="mdc-notched-outline__trailing"></span>
	</span>
	<input type="text" class="mdc-text-field__input note-title-elem" spellcheck="false" aria-labelledby="my-label-id"/>
</label>

<!-- Note text -->
		
<label class="mdc-text-field mdc-text-field--outlined mdc-text-field--textarea mdc-text-field--with-internal-counter note-text">
	<span class="mdc-notched-outline">
		<span class="mdc-notched-outline__leading"></span>
		<span class="mdc-notched-outline__notch">
			<span class="mdc-floating-label" id="my-label-id">What's on your mind?</span>
		</span>
		<span class="mdc-notched-outline__trailing"></span>
	</span>
	<span class="mdc-text-field__resizer">
		<textarea class="mdc-text-field__input note-text-elem" spellcheck="false" aria-labelledby="my-label-id" rows="1" cols="40"></textarea>
	</span>
</label>